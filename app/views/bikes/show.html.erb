<div class="container">
    <p class="text-right mt-5">Edit this bike <span><%= link_to "<i class='fas fa-pencil-alt'></i>".html_safe, edit_bike_path %></span></p>
    <p class="text-right mt-5">Delete this bike <span><%= link_to "<i class='far fa-trash-alt'></i>".html_safe, bike_path, method: :delete, data: {confirm: 'Are you sure?'} %></span></p>
  <div class="d-flex justify-content-center align-items-center">
    <div class="card mt-2" style="width: 18rem;">
      <div class="card-category_pic" style="background-image: url('<%= cl_image_path @bike.photos.first.key %>')">
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= @bike.title %></h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Price: <%= @bike.price %></li>
        <li class="list-group-item">Type of Bike: <%= @bike.category %></li>
        <li class="list-group-item">Location: <%= @bike.location %></li>
      </ul>
      <div class="card-body">
        <%= link_to "Book this bike now!", new_bike_booking_path(@bike), class: "card-link" %>
      </div>
    </div>
  </div>
</div>
