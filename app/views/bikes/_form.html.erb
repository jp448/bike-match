<div class="container">
  <%= simple_form_for [ @bike ] do |f| %>
    <%= f.input :title %>
    <%= f.input :category, collection: ["Dutch", "Electric", "Racing", "BMX", "Road", "Mountain", "Tandem", "Cruiser", "Single Speed", "Track"] %>
    <%= f.input :location %>
    <%= f.input :address %>
    <%= f.input :price %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "Add bike", class: "btn btn-primary" %>
  <% end %>
</div>
