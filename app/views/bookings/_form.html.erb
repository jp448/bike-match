
<div class="row">
  <div class="container">
    <%= simple_form_for [@bike, @booking] do |f| %>
      <%= f.input :start_date, as: :string, input_html: {class: "datepicker"}%>
      <%= f.input :end_date, as: :string, input_html: {class: "datepicker", id: "secondRangeInput"}%>
      <%= f.submit "Make Booking", class: "btn btn-outline-primary btn-rounded btn-sm my-0" %>
    <% end %>
  </div>
</div>
